<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- Action to open To-do Task list -->
        <act_window id="action_todo_task" name="State" res_model="estate.model" view_mode="tree,kanban"/>
        <record model="ir.ui.view" id="main_form_book_State">
            <field name="name">State property</field>
            <field name="model">estate.model</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="active"/>
                                <field name="name"/>
                                <field name="description"/>

                                <field name="postcode"/>
                                <field name="date_availability"/>
                                <field name="expected_price"/>
                                <field name="property_type_id"/>
                                <field name="salesperson_id"/>
                                <field name="total_area"/>
                                <field name="best_price"/>

                            </group>
                            <group name="group_right">
                                <field name="selling_price"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>

                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden_area"/>

                                <field name="garden_orientation"/>

                                <field name="state"/>
                                <field name="buyer_id"/>
                                <field name="offer_ids"/>


                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_tree_todo_task" model="ir.ui.view">
            <field name="name">State</field>
            <field name="model">estate.model</field>
            <field name="arch" type="xml">
                <tree string="List states">
                    <field name="name"/>
                    <field name="active"/>
                    <field name="description"/>
                    <field name="postcode"/>
                    <field name="date_availability"/>
                    <!--                    <field name="expected_price"/>-->
                    <!--                    <field name="selling_price"/>-->
                    <field name="expected_price" sum="Total expected price"/>
                    <field name="selling_price" sum="Total selling price"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="facades"/>
                    <field name="garage"/>
                    <field name="garden"/>
                    <field name="garden_area"/>
                    <field name="garden_orientation"/>
                    <field name="state"/>
                    <field name="property_type_id"/>
                    <field name="salesperson_id"/>
                    <field name="buyer_id"/>
                    <field name="offer_ids"/>
                    <field name="total_area" sum="Total area"/>
                    <field name="best_price" sum="Best price"/>


                </tree>
            </field>
        </record>


        <record id="crm_lost_reason_view_form2" model="ir.ui.view">
            <field name="name">State</field>
            <field name="model">estate.model</field>
            <field name="arch" type="xml">
                <form string="Test">
                    <header>
                        <button name="cancel_button" type="object" string="Cancel"/>
                        <button name="sold_button" type="object" string="Sold"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="postcode"/>
                            </group>
                            <group>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                            </group>
                            <group>
                                <field name="selling_price"/>
                            </group>
                            <group>
                                <field name="bedrooms"/>
                            </group>

                            <group>
                                <field name="living_area"/>
                            </group>
                            <group>
                                <field name="facades"/>
                            </group>
                            <group>
                                <field name="garage"/>
                            </group>
                            <group>
                                <field name="garden"/>
                            </group>
                            <group>
                                <field name="garden_area"/>
                            </group>
                            <group>
                                <field name="garden_orientation"/>
                            </group>

                            <group>
                                <field name="state"/>
                            </group>
                            <group>
                                <field name="active"/>
                            </group>

                            <group>
                                <field name="property_type_id"/>
                            </group>

                            <group>
                                <field name="salesperson_id"/>
                            </group>
                            <group>
                                <field name="buyer_id"/>
                            </group>

                            <group>
                                <field name="offer_ids"/>
                            </group>

                            <group>
                                <field name="total_area"/>
                            </group>
                            <group>
                                <field name="best_price"/>
                            </group>
                            <group>

                            </group>

                            <notebook>
                                <page string="Description">
                                    <field name="description"/>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_filter_todo_task2" model="ir.ui.view">
            <field name="name">State</field>
            <field name="model">estate.model</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="active"/>
                    <field name="description"/>
                    <field name="postcode"/>
                    <field name="date_availability"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="facades"/>
                    <field name="garage"/>
                    <field name="garden"/>
                    <field name="garden_area"/>
                    <field name="garden_orientation"/>
                    <field name="state"/>
                    <field name="property_type_id"/>
                    <field name="salesperson_id"/>
                    <field name="buyer_id"/>
                    <field name="total_area"/>
                    <field name="best_price"/>


                    <separator/>
                    <filter string="Available properties" name="available_properties"
                            domain="['|',('state', '=', 'New'),('state', '=', 'Offer Received') ]"/>
                    <group expand="1" string="Results by postcode">
                        <filter string="Results by postcode" name="results_by_postcode"
                                context="{'group_by':'postcode'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!--        <menuitem id="menu_todo_task" name="State" parent="mail.menu_root_discuss" sequence="20"-->
        <!--                  action="action_todo_task"/>-->
        <!-- actions opening views on models -->
        <act_window id="main_action_window_State" name="list_state" res_model="estate.model"
                    view_mode="kanban,tree,form"/>
        <!-- Top menu item -->
        <menuitem name="State" id="main_menu_State"/>
        <menuitem name="list_state" id="book_menu_State" parent="main_menu_State"
                  action="main_action_window_State"/>
    </data>
</openerp>
