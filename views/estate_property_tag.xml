<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- Action to open To-do Task list -->
        <act_window id="action_todo_task_tag" name="State" res_model="estate.property.tag" view_mode="tree,kanban"/>
        <record model="ir.ui.view" id="main_form_book_State">
            <field name="name">State type property</field>
            <field name="model">estate.property.tag</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group name="group_top">
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_tree_todo_task" model="ir.ui.view">
            <field name="name">State</field>
            <field name="model">estate.property.tag</field>
            <field name="arch" type="xml">
                <tree string="List states">
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <record id="crm_lost_reason_view_form" model="ir.ui.view">
            <field name="name">State</field>
            <field name="model">estate.property.tag</field>
            <field name="arch" type="xml">
                <form string="Test">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_filter_todo_task" model="ir.ui.view">
            <field name="name">State</field>
            <field name="model">estate.property.tag</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>
        <!--        <menuitem id="menu_todo_task" name="State" parent="mail.menu_root_discuss" sequence="20"-->
